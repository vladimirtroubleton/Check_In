@model EventsDataLayer.Models.EventModel

@{
    ViewData["Title"] = "EventCreate";
}

    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <form asp-action="EventCreate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GroupId" class="control-label"></label>
                        <select asp-for="GroupId" class="form-control">
                            @foreach (var item in ViewBag.Groups)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                        <span asp-validation-for="GroupId" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group">
                        <input type="submit" value="Добавить" class="btn btn-outline-info" />
                    </div>
                </form>
            </div>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

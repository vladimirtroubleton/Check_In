@model Check_InAdmin.Models.AllDataInViewModel

@{
    ViewData["Title"] = "Index";
}

        <div class="row">
           
            <div class="col-6 text-center">
                <h4>Пользователи</h4>
            </div>
            
            <div class="col-6 text-center">
                <h4>Группы</h4>
            </div>
        </div>
        <div class="row">
          
            <div class="col-6 mx-auto text-center">


                @foreach (var item in Model.Users)
                {
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">
                                @item.Name @item.Surname
                            </div>
                            <a href="#" class="btn btn-outline-info">Перейти</a>
                        </div>
                    </div>
                }
            </div>
            <div class="col-6 mx-auto text-center">
                @foreach (var item in Model.Groups)
                {
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">
                                @item.Name
                            </div>
                            
                               <a href="/Home/DeleteGroup?id=@item.Id" class="btn btn-outline-danger">Удалить</a> 
                               <a href="/Home/EventsViewGetByGroup?id=@item.Id" class="btn btn-outline-danger">События</a>
                               <a href="/Home/QuestionViewGetByGroup?id=@item.Id" class="btn btn-outline-danger">Опросы</a>
                               
                                
                                
                            
                        </div>
                    </div>
                }
            </div>
        </div>


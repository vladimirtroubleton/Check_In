@model AuthDataLayer.Models.UserModel

@{
    ViewData["Title"] = "GetUserProfile";
   
}
<hr />
    <div class="row">
        <div class="col-12 mx-auto text-center">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Логин пользователя</div>
                    <div class="card-title"><h4>@Model.Login</h4></div>
                    <div class="card-title">Группа пользователя</div>
                    <div class="card-title"><h4>@ViewBag.Group.Name</h4></div>
                    <div class="card-title">Имя и фамилия</div>
                    <div class="card-title"><h4>@Model.Name @Model.Surname</h4></div>
                    <div class="card-title">Почта</div>
                    <div class="card-title"><h4>@Model.Email</h4></div>
                    <div class="card-title">Возраст</div>
                    <div class="card-title"><h4>@Model.Age</h4></div>
                   
                </div>
            </div>
        </div>
    </div>
